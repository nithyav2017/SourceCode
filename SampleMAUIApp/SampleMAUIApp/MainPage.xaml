<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMAUIApp.MainPage">
    <VerticalStackLayout>
        <Label Text="RA Patient Registration" FontSize="22" HorizontalOptions="Center"/>
        <Entry x:Name="FirstName" Placeholder="First Name"/>
        <Entry x:Name="LastName" Placeholder="Last Name"/>
        <Entry x:Name="Email" Placeholder="Email"/>
        <Entry x:Name="InsuranceType" Placeholder="InsuranceType"/>
        <Entry x:Name="Phone" Placeholder="Phone"/>
        <Entry x:Name="Pin" Placeholder="4-Digit PIN" IsPassword="True"/>
        <Button Text="Register" Clicked="OnRegisterClicked"/>
    </VerticalStackLayout>

</ContentPage>

    
    