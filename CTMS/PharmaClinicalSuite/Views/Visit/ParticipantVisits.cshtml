@{
    Layout = null;
    var participantId = ViewBag.ParticipantId ?? 1;
}
<!DOCTYPE html>
<html ng-app="ctmsApp">
 <head>
    <meta charset="utf-8" />
    <title>CTMS - Participant Visits </title>
    <base href="/" />
    <script src="/js/angular.min.js"></script>
    <script src="/js/angular-route.min.js"></script>
    <script>window.participantId= @participantId</script>
    <script src="/app/app.module.js"></script>
    <script src="/app/controllers/participants.controller.js"></script>
</head>
<body>
    <div ng-view></div>
    <script>
        if(window.location.hash === '')
        {
            window.location.hash = '#/participant-visits';
        }
    </script>
</body>
</html>