@page "{pin}"
@model ArthritisPatientPortal.Pages.DashboardModel
@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container">
    <h2>Welcome, @Model.Patient.FirstName!</h2>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Patient Information
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.Patient.FirstName @Model.Patient.LastName</p>
                    <p><strong>Email:</strong> @Model.Patient.Email</p>
                    <p><strong>Phone:</strong> @Model.Patient.Phone</p>
                    <p><strong>Insurance Type:</strong> @Model.Patient.InsuranceType</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Copay Card
                </div>
                <div class="card-body">
                    @if (string.IsNullOrEmpty(Model.Patient.CopayCardId))
                    {
                        <p>You don't have a copay card yet.</p>
                        <form method="post">
                            <button type="submit" class="btn btn-primary">Generate Copay Card</button>
                        </form>
                    }
                    else
                    {
                        <p>Your copay card has been generated.</p>
                        <a asp-page="/CopayCardDetails" asp-route-id="@Model.Patient.CopayCardId" class="btn btn-primary">View Copay Card</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
